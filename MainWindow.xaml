<Window x:Class="ASCII_Images.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASCII_Images"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Choose image" Click="ChooseImage_Click" Height="25" Width="80" HorizontalAlignment="Left"/>
                <Button Content="Save" Click="SaveImage_Click" Height="25" Width="80" Margin="10,0,0,0"/>
                </StackPanel>
            <TextBlock x:Name="tmpBlock" FontSize="3"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
